<features name="kapua-broker-${project.version}">
	<feature name="kapua-broker" version="${project.version}" description="Kapua Broker Feature">
	    <feature>karaf-framework</feature>
	    
	    <!-- JTA -->
        <bundle start-level="30">mvn:org.apache.geronimo.specs/geronimo-jta_1.1_spec/1.1.1</bundle>
        
        <!-- JPA -->
        <bundle start-level="30">mvn:org.hibernate.javax.persistence/hibernate-jpa-2.1-api/1.0.0.Final</bundle>
       
		<!-- These do not natively support OSGi, so using 3rd party bundles.  -->
		<bundle>mvn:org.apache.servicemix.bundles/org.apache.servicemix.bundles.antlr/2.7.7_5</bundle>
		<bundle>mvn:org.apache.servicemix.bundles/org.apache.servicemix.bundles.dom4j/1.6.1_5</bundle>
		<bundle>mvn:org.apache.servicemix.bundles/org.apache.servicemix.bundles.commons-io/1.4_3</bundle>
		<bundle dependency="true">mvn:org.apache.servicemix.bundles/org.apache.servicemix.bundles.commons-dbcp/1.4_3</bundle>
		
		<!-- These do not natively support OSGi, so wrap with BND. -->
		<bundle>wrap:mvn:org.jboss/jandex/1.2.1.Final</bundle>

		<!-- Commons dependencies -->
		<bundle>mvn:org.glassfish/javax.jms/3.1.1</bundle>
		
		<bundle>wrap:mvn:com.sun.org.apache/jaxp-ri/1.4</bundle>
		<bundle>mvn:joda-time/joda-time/2.8.1</bundle>
		<bundle>mvn:commons-codec/commons-codec/1.10</bundle>
		<bundle>mvn:com.amazonaws/aws-java-sdk-osgi/1.10.10</bundle>

        <bundle start-level="45">mvn:org.hibernate.common/hibernate-commons-annotations/4.0.4.Final</bundle>
        <bundle start-level="45">mvn:org.hibernate/hibernate-core/${hibernate.version}</bundle>
        <bundle start-level="45">mvn:org.hibernate/hibernate-entitymanager/${hibernate.version}</bundle>
        <bundle start-level="45">mvn:org.hibernate/hibernate-osgi/${hibernate.version}</bundle>

        <bundle start-level="50">mvn:org.eclipse.kapua/org.eclipse.kapua.broker.jdbc/${project.version}</bundle>
        <bundle start-level="50">mvn:org.eclipse.kapua/org.eclipse.kapua.broker.core/${project.version}</bundle>

	</feature>
</features>
